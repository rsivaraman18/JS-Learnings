//console.log( email.toLocaleLowerCase( ) ) ;

//console.log( email.includes('gmail')) ;     //True or false


//email check
function emailcheck(user ) {
    if  (user.includes ( '@')) {
        return true;

    } else{
        return false;
    }
};

console.log(emailcheck(email)     )


//pwd check
function passcheck(userpass ) {
    if  (  (userpass.includes('@') ) &&  ( userpass.length>5)  ) {
        return true;

    } else{
        return false;
    }
};

console.log(passcheck(pwd))

