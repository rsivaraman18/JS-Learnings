document.querySelector('button').addEventListener('click',( myevent) =>{
    document.querySelector('h1').textContent ='js'
}) 
*/

 function red() {
    let bgval = document.querySelector('body')
    bgval.style.background ='red';
 }

 function blue() {
    let bgval = document.querySelector('body')
    bgval.style.background ='blue';
 }

 function fontcolor() {
    let fontval = document.querySelector('h1')
    fontval.style.color ='blue';
 }

 function adding() {
    let myul =document.querySelector('ul')
    let newLi =document.createElement('li')
    newLi.textContent ='created by JS'
    myul.appendChild(newLi)
 }

 function mouse() {
    let bgval = document.querySelector('body')
    bgval.style.background ='blue';
}

