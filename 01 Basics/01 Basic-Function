//class 9 


let box=['bike','car','cycle','bus'];



//find index1
let pos = box.findIndex(function  (val) {
    return val =='cycle'
}) 

console.log(pos) 

//find ibdex 2
let findme =function(ourlist,search){
    let result = ourlist.findIndex(function(val){
        return val.toLowerCase ()  == search.toLowerCase ()
    })
    return result
}

z=findme(box,'CyCle')
console.log(z)
 

